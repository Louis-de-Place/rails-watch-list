<div class="container">
  <% @movies_lists.each do |list, movies| %>
    <div class="row mb-4">
      <div class="flexbox">
        <div class="header"><%= list.humanize %></div>
      </div>
      <div class="cards">
        <% movies.each do |m| %>
          <%= link_to movie_path(m), class: "text-decoration-none text-dark" do %>
            <div class="card-trip">
              <div class="image-container">
                <img src="https://image.tmdb.org/t/p/w500<%= m.poster_path %>" />
              </div>
              <h2 class="text-truncate card-title"><%= m.title %></h2>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
