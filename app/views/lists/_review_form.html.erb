<%= simple_form_for [@list, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating,
              as: :radio_buttons,
              collection: Review::AUTHORIZED_RATINGS,
              label_method: lambda { |rate| render "rate" },
              item_wrapper_class: "d-inline-block"
  %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
