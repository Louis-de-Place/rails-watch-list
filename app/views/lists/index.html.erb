<div class="banner">
  <div class="container">
    <h1>Your Movie Watch-List</h1>
  </div>
</div>
<div class="container w-50">
  <div class="row my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div class="header">My Lists</div>
      <%= link_to 'New List', new_list_path, class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="cards">
      <% @lists.each do |l| %>
        <%= link_to list_path(l), class: "text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/120x120/?movie)">
            <%= l.name %>
            <object>
              <%= link_to list_path(l), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-xmark"></i>
              <% end %>
            </object>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
