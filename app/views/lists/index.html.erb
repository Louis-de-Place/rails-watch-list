<div class="banner">
  <div class="container">
    <h1>Your Movie Watch-List</h1>
  </div>
</div>
<div class="container w-50 my-4">
  <div class="row">
    <div class="d-flex justify-content-between mb-3">
      <div class="header">My Lists</div>
      <%= link_to 'New List', new_list_path, class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="list-cards">
      <% @lists.each do |l| %>
        <%= link_to list_path(l), class: "text-decoration-none" do %>
          <div class="card-category"
               style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path l.photo.attached? ? l.photo.key : 'list_background_default', crop: :fill %>)">
            <%= l.name %>
            <object>
              <%= link_to list_path(l), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-xmark"></i>
              <% end %>
            </object>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
